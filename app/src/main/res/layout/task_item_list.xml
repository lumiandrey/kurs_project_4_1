<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"

    android:layout_margin="@dimen/activity_default_margin"
    android:background="@color/background_task_item"
    >

    <LinearLayout
        android:orientation="horizontal"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name_task_item_list"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="10"

            android:layout_margin="16dp"

            android:text="Name Task"/>

        <CheckBox
            android:id="@+id/done_task_item_list"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="1"

            android:layout_margin="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/date_end_task_item_list"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="16dp"

            android:text="Date end task"/>

        <ProgressBar
            android:id="@+id/progress_bar_item_task_list"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="16dp"

            android:max="100"

            style="?android:attr/progressBarStyleHorizontal"/>
    </LinearLayout>

</LinearLayout>