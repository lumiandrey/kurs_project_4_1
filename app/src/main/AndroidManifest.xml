<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="by.bsuir.zavadatar.andrey.teammanagerbsuir.controllers.activity">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:name="by.bsuir.zavadatar.andrey.teammanagerbsuir.utils.Runner"
        android:allowBackup="true"
        android:icon="@drawable/icons"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppThemeCustom">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".UserRoomActivity">
        </activity>
        <activity android:name=".TaskListFragmentActivity">
        </activity>
        <activity android:name=".TaskPagerActivity">
        </activity>
        <activity android:name=".SettingApplicationActivity">
        </activity>
        <activity android:name=".LogTimeListActivity">
        </activity>
        <activity android:name=".LogTimeSingleActivity">
        </activity>
        <activity android:name=".LogTimePagerActivity">
        </activity>
        <activity android:name=".TaskSingleActivity">
        </activity>
        <activity android:name=".LoginActivity">
        </activity>
        <activity android:name=".RegistrationActivity">
        </activity>
    </application>

</manifest>